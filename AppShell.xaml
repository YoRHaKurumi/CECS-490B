<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Search" Icon="search_icon.png">
            <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate local:ItemListView}"
            Route="ItemListView" />
        </Tab>
        <Tab Title="User Shopping List" Icon="account_icon.png">
            <ShellContent
            Title="My List"
            ContentTemplate="{DataTemplate local:UserItemListPage}"
            Route="UserItemListPage" />
        </Tab>
    </TabBar>
</Shell>
